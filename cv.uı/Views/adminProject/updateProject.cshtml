@model DtoLayer.Dtos.projectDto.projectUpdateDto
@{
    ViewData["Title"] = "updateProject";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Update Project</h1>

@using (Html.BeginForm("updateProject", "adminProject", FormMethod.Post))
{
    <div class="form-group">
        <label>Project Title</label>
        @Html.TextBoxFor(i=>i.projectsTitle, new {@class="form-control"})
        <br>
        <label>Description of Project</label>
        @Html.TextAreaFor(i=>i.projectsDescription, new {@class="form-control", @rows = 5})
        <br>
        <label>Image Path of Project</label>
        @Html.TextBoxFor(i=>i.projectsImage, new {@class="form-control"})
        <br>
        @Html.HiddenFor(i=>i.projectsId)
        <button class=" btn btn-success">Update Project</button>
    </div>

}

